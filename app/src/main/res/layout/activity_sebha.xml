<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sebha"
    android:orientation="vertical"
    tools:context=".Sebha"
    tools:visibility="visible">

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:autoText="false"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:fontFamily="@font/graduate"
        android:freezesText="false"
        android:text="0"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:textSize="80sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="97dp"
        android:layout_height="99dp"
        android:layout_above="@+id/btnClick"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="-1dp"
        android:background="@mipmap/circyle"
        android:longClickable="false"
        android:shadowColor="#A63F51B5"
        android:textDirection="rtl"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@color/material_on_surface_emphasis_high_type"
        app:rippleColor="@color/white"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/btnClick"
        android:layout_width="288dp"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/circyle"
        android:fontFamily="serif"
        android:shadowColor="#B73F51B5"
        android:textAlignment="center"
        android:textDirection="rtl"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:backgroundTint="@color/material_on_surface_emphasis_high_type" />

</RelativeLayout>